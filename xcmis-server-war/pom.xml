                        **/xdoclet-xdoclet-module-*.jar,
                        **/xerces-*.jar,
                        **/xjavadoc-*.jar,
                        **/xml-apis-*.jar,
                        **/xmlParserAPIs-*.jar,
                        **/xercesImpl-*.jar,
                     </warSourceExcludes>
                     <archive>
                        <manifest>
                           <addClasspath>true</addClasspath>
                        </manifest>
                        <manifestEntries>
                           <SCM-Revision>${buildNumber}</SCM-Revision>
                           <SCM-URL>${project.scm.connection}</SCM-URL>
                           <Specification-Title>${project.name}</Specification-Title>

                           <Implementation-Version>${project.version}</Implementation-Version>
                           <Implementation-Vendor>eXo Platform SAS</Implementation-Vendor>
                        </manifestEntries>
                     </archive>
                  </configuration>
               </plugin>
            </plugins>
         </build>

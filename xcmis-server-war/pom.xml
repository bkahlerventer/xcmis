            <plugins>
               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-war-plugin</artifactId>
                  <version>2.0.2</version>
                  <configuration>
                     <webXml>${project.basedir}/src/main/webapp/WEB-INF/web-all.xml</webXml>
                     <warSourceExcludes>
                        **/web-*.xml,
                        **/ant-*.jar,
                        **/ant-launcher-*.jar,

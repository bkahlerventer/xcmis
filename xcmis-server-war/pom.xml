                        **/jline-*.jar,
                        **/jmock-*.jar,
                        **/jsf-api-*.jar,
                        **/junit-*.jar,
                        **/lucene-spellchecker-*.jar,
                        **/portlet-api-*.jar,
                        **/servlet-api-*.jar,
                        **/slf4j-simple-*.jar,
                        **/spring-*.jar,
                        **/velocity-*.jar,
                        **/velocity-dep-*.jar,

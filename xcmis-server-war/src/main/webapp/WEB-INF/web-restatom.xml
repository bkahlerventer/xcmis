<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

   <display-name>xCMIS Application: REST</display-name>

   <filter>
      <filter-name>UserContextInitializerFilter</filter-name>
      <filter-class>org.xcmis.server.UserContextInitializerFilter</filter-class>
   </filter>

   <filter>
      <filter-name>RestContentFilter</filter-name>
      <filter-class>org.exoplatform.services.rest.servlet.RestEncodingFilter</filter-class>
      <init-param>
         <param-name>REQUEST_ENCODING</param-name>
         <param-value>UTF-8</param-value>
      </init-param>
   </filter>

   <filter-mapping>
      <filter-name>UserContextInitializerFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>

   <filter-mapping>
      <filter-name>RestContentFilter</filter-name>
      <servlet-name>RestServer</servlet-name>
   </filter-mapping>

   <listener>
      <listener-class>org.exoplatform.ws.frameworks.servlet.StandaloneContainerInitializedListener</listener-class>
   </listener>

   <servlet>
      <servlet-name>RestServer</servlet-name>
      <display-name>Rest Server</display-name>
      <description>eXo REST Server</description>
      <servlet-class>org.exoplatform.services.rest.servlet.RestServlet</servlet-class>
      <load-on-startup>4</load-on-startup>
   </servlet>

   <servlet-mapping>
      <servlet-name>RestServer</servlet-name>
      <url-pattern>/rest/*</url-pattern>
   </servlet-mapping>

   <security-constraint>
      <web-resource-collection>
         <web-resource-name>xcmis</web-resource-name>
         <url-pattern>/rest/*</url-pattern>
         <url-pattern>/cmisws/*</url-pattern>
      </web-resource-collection>
      <auth-constraint>
         <role-name>users</role-name>
         <role-name>administrators</role-name>
      </auth-constraint>
      <user-data-constraint>
         <transport-guarantee>NONE</transport-guarantee>
      </user-data-constraint>
   </security-constraint>

   <login-config>
      <auth-method>BASIC</auth-method>
      <realm-name>exo-domain</realm-name>
   </login-config>

   <security-role>
      <description>Security role1</description>
      <role-name>administrators</role-name>
   </security-role>

   <security-role>
      <description>Security role2</description>
      <role-name>users</role-name>
   </security-role>

</web-app>
